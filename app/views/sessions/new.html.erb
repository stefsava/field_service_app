<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">

    <!-- Flash Messages -->
    <% if flash[:alert] || flash[:notice] %>
      <div class="alert <%= flash[:alert] ? 'alert-danger' : 'alert-success' %> text-center">
        <%= flash[:alert] || flash[:notice] %>
      </div>
    <% end %>

    <h2 class="text-center text-primary mb-3">Accedi</h2>

    <%= form_with url: session_path, method: :post, class: "needs-validation", novalidate: true do |f| %>
      <div class="mb-3">
        <label for="email_address" class="form-label">Email</label>
        <%= f.email_field :email_address,
        autocomplete: 'username',
        class: "form-control", required: true, autofocus: true, placeholder: "Inserisci la tua email",
        value: params[:email_address] || 'admin@example.com' %>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <%= f.password_field :password,
        autocomplete: 'current-password',
        value: 'password123',
        class: "form-control", required: true, placeholder: "Inserisci la tua password", maxlength: 72 %>
      </div>

      <div class="d-grid">
        <%= f.submit "Accedi", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Password dimenticata?", new_password_path, class: "text-decoration-none" %>
    </div>

  </div>
</div>
