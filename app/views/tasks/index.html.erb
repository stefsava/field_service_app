<div data-controller="tasks">
  <h2>📋 Lista Tasks</h2>
  <ul data-tasks-target="tasksList"></ul>

  <template id="task-template">
    <li id="task-">
      <div data-task-target="view">
        <span class="task-name"></span>
        <span class="badge bg-info"></span>
        <span class="badge bg-danger" style="display: none;">⚠️ Non sincronizzato</span>
        <button data-action="click->tasks#editTask">✏️ Modifica</button>
      </div>
      <div data-task-target="edit" style="display: none;">
        <form data-task-target="form" data-action="submit->tasks#confirmEdit">
          <input type="text" value=""
                 data-task-id=""
                 data-task-target="nameInput">
          <button type="submit">✔️ Conferma</button>
          <button type="button" data-action="click->tasks#cancelEdit">❌ Annulla</button>
        </form>
      </div>
    </li>
  </template>
</div>
